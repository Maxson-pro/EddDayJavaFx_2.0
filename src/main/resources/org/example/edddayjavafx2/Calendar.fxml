<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.edddayjavafx2.HelloController">

    <children>
        <HBox layoutX="150.0" layoutY="20.0" spacing="20">
            <Button onAction="#previousYear" prefHeight="30" prefWidth="50" text="◀◀"/>

            <Button onAction="#previousMonth" prefHeight="30" prefWidth="40" text="◀"/>

            <Label fx:id="monthYearLabel" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Январь 2025" />

            <Button onAction="#nextMonth" prefHeight="30" prefWidth="40" text="▶" />

            <Button onAction="#nextYear" prefHeight="30" prefWidth="50" text="▶▶" />
        </HBox>
        <GridPane fx:id="calendarGrid" hgap="5" layoutX="50.0" layoutY="70.0" prefHeight="250" prefWidth="500" vgap="5">
        </GridPane>
        <Button layoutX="200.0" layoutY="340.0" onAction="#today" prefHeight="30" prefWidth="100" text="Сегодня">
         <font>
            <Font name="Arial Black" size="15.0" />
         </font></Button>
        <Button layoutX="320.0" layoutY="340.0" onAction="#backToMain" prefHeight="30" prefWidth="100" text="Назад" />
    </children>
</AnchorPane>
